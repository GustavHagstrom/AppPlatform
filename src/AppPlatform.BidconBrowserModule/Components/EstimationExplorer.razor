<div style="@($"overflow-y: scroll; position: relative; height: {Height}; padding-left: 40px;")">
    @if (ItemTree is not null)
    {
        <DbTreeItemView TreeItems="ItemTree!.Items" IndentLevel="0"/>
    }
</div>

@code {
    [Parameter, EditorRequired] public TreeItem? ItemTree { get; set; }
    [Parameter] public string Height { get; set; } = string.Empty;
}