@inject IStringLocalizer<DarkModeSection> Localizer

<SettingsSection Title="@Localizer["Utseende"]">
    <MudSwitch T="bool?" Value="ThemeManager?.IsDarkMode" ValueChanged="SetDarkMode" Color="Color.Primary" Label="@Localizer["Mörkt tema"]" />
</SettingsSection>

@code {
    [CascadingParameter] public CascadingThemeManager? ThemeManager { get; set; }

    async Task SetDarkMode(bool? value)
    {
        if (ThemeManager is not null && value is not null)
        {
            await ThemeManager.SetDarkModeAsync(value.Value);
        }
    }

}
