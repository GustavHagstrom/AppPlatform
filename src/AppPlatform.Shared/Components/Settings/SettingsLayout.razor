@using MudBlazor.Services
@inherits LayoutComponentBase
@layout MainLayout

@inject IStringLocalizer<SettingsLayout> Localizer
@inject IApplicationRenderComponentsService ApplicationRenderComponentsService
<PageSetupWithNavigation WhenToHideMobileView="Breakpoint.MdAndUp" WhenToHideDesktopView="Breakpoint.SmAndDown">
    <NavigationContent>

        <AppNavLink Href="@SharedRoutes.Settings" Match="NavLinkMatch.All" Class="d-flex align-center px-4 py-2">
            <MudIcon Icon="@Icons.Material.Sharp.Settings" Size="Size.Medium" />
            <MudHidden Breakpoint="Breakpoint.SmAndDown">
                <MudText Inline="true" Class="pl-2">@Localizer["Allmänt"]</MudText>
            </MudHidden>
        </AppNavLink> 
        @foreach (var component in ApplicationRenderComponentsService.SettingsNavigationComponents)
        {
            @component.Render();
        }


    </NavigationContent>
    <ChildContent>
        @Body
    </ChildContent>
</PageSetupWithNavigation>
