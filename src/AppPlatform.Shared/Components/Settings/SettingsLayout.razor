@using MudBlazor.Services
@inherits LayoutComponentBase
@layout MainLayout

@inject IStringLocalizer<SettingsLayout> Localizer
@inject IApplicationRenderComponentsService ApplicationRenderComponentsService
<PageSetupWithNavigation >
    <NavigationContent>

        <SettingsNavLink Href="@SharedRoutes.Settings" Match="NavLinkMatch.All" Icon="@Icons.Material.Sharp.Settings" Text="@Localizer["Allmänt"]"/>
        @foreach (var component in ApplicationRenderComponentsService.SettingsNavigationComponents)
        {
            @component.Render();
        }


    </NavigationContent>
    <ChildContent>
        @Body
    </ChildContent>
</PageSetupWithNavigation>
