<AuthorizedNavLink Href="@Href" Policy="@AuthPolicy" Match="Match" Class="d-flex align-center px-4 py-2">
    <MudIcon Icon="@Icon" Size="Size.Medium" />
    <MudHidden Breakpoint="Breakpoint.SmAndDown">
        <MudText Inline="true" Class="pl-2">@Text</MudText>
    </MudHidden>
</AuthorizedNavLink>

@code{
    [Parameter] public string? Href { get; set; }
    [Parameter] public string? AuthPolicy { get; set; }
    [Parameter] public NavLinkMatch Match { get; set; } = NavLinkMatch.Prefix;
    [Parameter] public string? Icon { get; set; }
    [Parameter] public string? Text { get; set; }

}