@using AppPlatform.Core.Enums.ViewTemplate
@using AppPlatform.Core.Services
@using AppPlatform.ViewSettingsModule.Components.Format

<SelectList T="SheetColumnType" DropDownLabel="@Localizer["Kolumn"]" ShowActions="false" Items="Enum.GetValues<SheetColumnType>().ToList()" ListVariant="ListVariant.DropDown" @bind-SelectedItem="SelectedColumn" GetItemNameFunc="SheetDataService.GetColumnTypeName" />

@* @if (SelectedFormat is not null)
{
    <FormatEditor Format="SelectedFormat"/>
} *@

@inject IStringLocalizer<SheetColumnEditor> Localizer
@inject ISheetDataService SheetDataService
@code{
    [Parameter] public SheetSection? Section { get; set; }
    [Parameter] public View? View { get; set; }

    SheetColumnType SelectedColumn = SheetColumnType.Description;

    SheetColumn? SelectedFormat => Section?.Columns.FirstOrDefault(x => x.ColumnType == SelectedColumn);

}