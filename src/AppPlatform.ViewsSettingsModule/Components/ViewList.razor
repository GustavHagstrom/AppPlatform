<MudSimpleTable Hover="false" Dense="true" Bordered="false">
    <tbody>
        @foreach (var view in Views)
        {
            <tr>
                <td class="pl-2">
                    <MudText>@view.Name</MudText>
                </td>
                <td>
                    <div style="display: flex; justify-content: flex-end;">
                        <MudIconButton Icon="@Icons.Material.Sharp.Edit" Color="Color.Primary" Size="Size.Small" OnClick="() => EditView(view)"/>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</MudSimpleTable>
@inject NavigationManager NavigationManager
@code{
    [Parameter] public List<View> Views { get; set; } = new();

    void EditView(View view)
    {
        NavigationManager.NavigateTo($"{Constants.Routes.ViewEditPage}/{view.Id}");
    }
}