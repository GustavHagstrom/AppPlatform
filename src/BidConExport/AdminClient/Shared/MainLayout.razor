@inherits LayoutComponentBase
<CascadingValue Value="_theme">
    <MudThemeProvider Theme="_theme" />
    <MudDialogProvider FullWidth="true"
                       MaxWidth="MaxWidth.ExtraSmall"
                       CloseButton="true"
                       DisableBackdropClick="true"
                       NoHeader="false"
                       Position="DialogPosition.Center"
                       CloseOnEscapeKey="true"/>
    <MudSnackbarProvider />

    <PageTitle>AdminClient</PageTitle>

    <MudLayout>
        <MudAppBar DisableGutters="true">
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" Class="ml-0"/>
            <MudText Typo="Typo.h6">LB Portalen - Admin</MudText>
        </MudAppBar>
        <MudDrawer @bind-Open="@_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="1">
            <MudNavMenu>
                <MudNavLink Href="/users" Icon="@Icons.Material.Sharp.People" IconColor="Color.Primary">Användare</MudNavLink>
                <MudNavLink Href="/" Icon="@Icons.Material.Sharp.People" IconColor="Color.Primary">test</MudNavLink>
                <MudNavLink Href="/roles" Icon="@Icons.Material.Sharp.AdminPanelSettings" IconColor="Color.Primary">Roller</MudNavLink>
                <MudNavGroup Title="Data">
                    <MudNavLink Href="/settings">Inställningar</MudNavLink>
                    <MudNavLink Href="/layouts">Export layouts</MudNavLink>
                </MudNavGroup>
            </MudNavMenu>
        </MudDrawer>
        <MudMainContent>
        
                @Body
        
        </MudMainContent>
    </MudLayout>
</CascadingValue>
@code {
 
    MudTheme _theme = CustomThemes.CustomStandardTheme;
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
