<SectionContainer SectionHeader="@Localizer["Prissummering"]">
    <MudTextField T="string" @bind-Value="Section.PriceWithoutChangesDescription" Margin="Margin.Dense" Variant="Variant.Outlined" Label="@Localizer["Beskrivning pris innan ändringar"]" />
    <MudTextField T="string" @bind-Value="Section.ChangesDescription" Margin="Margin.Dense" Variant="Variant.Outlined" Label="@Localizer["Beskrivning summa ändringar"]" />
    <MudTextField T="string" @bind-Value="Section.PriceWithChangesDescription" Margin="Margin.Dense" Variant="Variant.Outlined" Label="@Localizer["Beskrivning pris med ändringar"]" />
    <MudSwitch @bind-Checked="Section.ShowChanges" Color="Color.Primary">@Localizer["Visa ändringssummering"]</MudSwitch>
    <FontEditor Font="Section.CommentFont" SampleText="@Localizer["Beskrivningstext"]" />
    <FontEditor Font="Section.PriceFont" SampleText="@Localizer["Pristext"]" />
</SectionContainer>

@code {
    [Parameter, EditorRequired] public required PriceSection Section { get; set; }
    [Inject] public required IStringLocalizer<PriceSectionEditor> Localizer { get; set; }
}
