<MudStack Spacing="4" Class="border borded-solid mt-4 pa-4" Style="border-color: var(--mud-palette-lines-inputs);">
    <MudText Typo="Typo.h5" Class="mb-2">@Header()</MudText>
    @ChildContent
</MudStack>

@code {
    [Inject] public required IStringLocalizer<SectionContainer> Localizer { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter, EditorRequired] public required string SectionHeader { get; set; }

    string Header()
    {
        return $"{Localizer["Sektion:"]} {SectionHeader}";
    }
}
