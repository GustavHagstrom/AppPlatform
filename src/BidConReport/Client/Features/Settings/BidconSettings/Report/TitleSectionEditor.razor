@using BidConReport.Shared.Features.ReportTemplate.Title;

<MudStack Spacing="3">
    <MudText Typo="Typo.h5" Class="mb-2">@Localizer["Sektion: Titel"]</MudText>
    <MudTextField T="string" @bind-Value="Section.Title" Margin="Margin.Dense" Variant="Variant.Outlined" Label="@Localizer["Titeltext"]" />
    <FontEditor Font="Section.Font" SampleText="@Localizer["Titel"]" />
</MudStack>


@code {
    [Parameter, EditorRequired] public required TitleSection Section { get; set; }
    [Inject]public required IStringLocalizer<TitleSectionEditor> Localizer { get; set; }
}
