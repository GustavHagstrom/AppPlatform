@inherits IsLoadingComponent

<MudText Typo="Typo.subtitle1">@Localizer["Förhandsval av rapportmall"]</MudText>
<MudSelect T="ReportTemplateDto" Dense="true" Variant="Variant.Outlined" Value="DefaultTemplate" ValueChanged="OnProfileChanged" Margin="Margin.Dense" AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.TopCenter">
    @foreach (var item in Templates)
    {
        <MudSelectItem Value="item" />
    }
</MudSelect>

@code {
    [Inject] public required IStringLocalizer<DefaultReportTemplateSelector> Localizer { get; set; }
    [Inject] public required IReportTemplateService TemplateService { get; set; }
    List<ReportTemplateDto> Templates { get; set; } = new List<ReportTemplateDto>();
    ReportTemplateDto? DefaultTemplate { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await Refresh();
    }
    async Task Refresh()
    {
        await SetLoading(true);
        Templates.Clear();
        Templates.AddRange(await TemplateService.GetAllAsync());
        DefaultTemplate = await TemplateService.GetDefaultAsync();
        await SetLoading(false);
    }
    async Task OnProfileChanged(ReportTemplateDto template)
    {
        DefaultTemplate = template;
        await TemplateService.SetAsDefaultAsync(template);
    }
}
