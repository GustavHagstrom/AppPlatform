<PageLayout>
    <NavigationContent>
        <MudStack Spacing="0">
            <MudButton Href="settings/common" Class="py-1 px-3 justify-start" Variant="Variant.Text" StartIcon="@Icons.Material.Sharp.AccountBox" Style="@StyleService.CreateNavigationButtonStyle("settings/common")">@Localizer["Allmänt"]</MudButton>
            <MudButton Href="settings/import" Class="py-1 px-3 justify-start" Variant="Variant.Text" StartIcon="@Icons.Material.Sharp.AccountBox" Style="@StyleService.CreateNavigationButtonStyle("settings/import")">@Localizer["Import"]</MudButton>
        </MudStack>
    </NavigationContent>
    <ChildContent>
        @ChildContent
    </ChildContent>
</PageLayout>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Inject] public required StyleService StyleService { get; set; }
    [Inject] public required IStringLocalizer<SettingsPageLayout> Localizer { get; set; }
}
