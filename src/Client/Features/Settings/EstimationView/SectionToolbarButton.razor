<style>
    .section-button{
        display: flex ;
        padding: 2px 4px 2px 4px; 
    }
    .section-button-enabled {
        color: var(--mud-palette-text-primary);
        cursor: pointer;
    }

    .section-button-disabled {
        color: var(--mud-palette-action-disabled);
    }
    .section-button-enabled:hover {
        background-color: var(--mud-palette-action-default-hover);
    }
    .section-button-active {
        padding: 1px 3px 1px 3px;
        border: 1px;
        border-style: solid;
    }
    .section-button-inactive {
        padding: 2px 4px 2px 4px;
    }
</style>

<div class="@($"{BaseClass} {SelectedClass} {DisabledClass}")" @onclick="OnClick">
    <MudIcon Icon="@Icon" Class="my-auto" Size="Size.Small"/>
</div>

@code {
    [Parameter] public string? Icon { get; set; }
    [Parameter] public bool Selected { get; set; } = false;
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public EventCallback<MouseEventArgs> OnClick { get; set; }

    string BaseClass = " section-button";
    string SelectedClass => Selected ? "section-button-active" : "section-button-inactive";
    string DisabledClass => Disabled ? "section-button-disabled" : "section-button-enabled mud-ripple";

}
