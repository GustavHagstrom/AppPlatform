@page "/settings"
@using Client.Features.Settings.Appearance
@using Client.Features.Settings.BidconCredentials
@using Client.Features.Settings.EstimationView
@using Client.Features.Settings.License
@using Client.Features.Settings.Roles

<div style="overflow: auto; max-height: 100%">
    <MudContainer MaxWidth="MaxWidth.Medium">

        <MudStack Spacing="4" Class="py-4">
            <AppearanceFrame />
            <EstimationViewFrame/>
            <CredentialsFrame />
            <LicenseFrame/>
