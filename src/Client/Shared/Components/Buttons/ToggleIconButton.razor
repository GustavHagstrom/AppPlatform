<div class="@Class" @onclick="OnClick">
    <MudIcon Icon="@Icon" Class="my-auto" Size="@Size"/>
</div>

@code {
    [Parameter] public string? Icon { get; set; }
    [Parameter] public bool Selected { get; set; } = false;
    [Parameter] public bool Disabled { get; set; } = false;
    [Parameter] public Size Size { get; set; } = Size.Small;
    [Parameter] public EventCallback<MouseEventArgs> OnClick { get; set; }



    string Class => $"section-button {SelectedClass} {DisabledClass}";
    string SelectedClass => Selected ? "section-button-active" : "section-button-inactive";
    string DisabledClass => Disabled ? "section-button-disabled" : "section-button-enabled mud-ripple";
}
