<PageLayout>
    <NavigationContent>
        <MudStack Spacing="0">
            <MudButton Href="orders/orders1" Class="py-1 px-3 justify-start" Variant="Variant.Text" StartIcon="@Icons.Material.Sharp.AccountBox" Style="@StyleService.CreateNavigationButtonStyle("orders/orders1")">Status</MudButton>
            <MudButton Href="orders/orders2" Class="py-1 px-3 justify-start" Variant="Variant.Text" StartIcon="@Icons.Material.Sharp.AccountBox" Style="@StyleService.CreateNavigationButtonStyle("orders/orders2")">Status</MudButton>
            <MudButton Href="orders/orders3" Class="py-1 px-3 justify-start" Variant="Variant.Text" StartIcon="@Icons.Material.Sharp.AccountBox" Style="@StyleService.CreateNavigationButtonStyle("orders/orders3")">Status</MudButton>
