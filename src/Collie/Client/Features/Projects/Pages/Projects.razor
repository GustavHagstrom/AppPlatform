@page "/projects"

<PageLayout>
    <NavigationContent>
        <MudStack Spacing="0">
            <MudButton Href="projects/ProjectSubPage1" Class="py-1 px-3 justify-start" Variant="Variant.Text" StartIcon="@Icons.Material.Sharp.AccountBox" Style="@StyleService.CreateNavigationButtonStyle("projects/ProjectSubPage1")">Status</MudButton>
        </MudStack>
    </NavigationContent>
    <ChildContent>
        @if(ChildContent is not null)
        {
            @ChildContent
        }
        else
        {
            <div>this is from the /project page</div>
        }
    </ChildContent>
</PageLayout>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Inject] public required StyleService StyleService { get; set; }
}
