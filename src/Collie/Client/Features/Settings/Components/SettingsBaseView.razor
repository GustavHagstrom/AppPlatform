<PageLayout>
    <NavigationContent>
        <MudStack Spacing="0">
            <MudButton Href="settings/settings1" Class="py-1 px-3 justify-start" Variant="Variant.Text" StartIcon="@Icons.Material.Sharp.AccountBox" Style="@StyleService.CreateNavigationButtonStyle("settings/settings1")">Status</MudButton>
            <MudButton Href="settings/settings2" Class="py-1 px-3 justify-start" Variant="Variant.Text" StartIcon="@Icons.Material.Sharp.AccountBox" Style="@StyleService.CreateNavigationButtonStyle("settings/settings2")">Status</MudButton>
            <MudButton Href="settings/settings3" Class="py-1 px-3 justify-start" Variant="Variant.Text" StartIcon="@Icons.Material.Sharp.AccountBox" Style="@StyleService.CreateNavigationButtonStyle("settings/settings3")">Status</MudButton>
        </MudStack>
    </NavigationContent>
    <ChildContent>
        @ChildContent
    </ChildContent>
</PageLayout>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Inject] public required StyleService StyleService { get; set; }
}
