    <NavigationContent>
        <MudStack Spacing="0">
            <MudButton Href="suppliers/suppliers1" Class="py-1 px-3 justify-start" Variant="Variant.Text" StartIcon="@Icons.Material.Sharp.AccountBox" Style="@StyleService.CreateNavigationButtonStyle("suppliers/suppliers1")">Status</MudButton>
            <MudButton Href="suppliers/suppliers2" Class="py-1 px-3 justify-start" Variant="Variant.Text" StartIcon="@Icons.Material.Sharp.AccountBox" Style="@StyleService.CreateNavigationButtonStyle("suppliers/suppliers2")">Status</MudButton>
